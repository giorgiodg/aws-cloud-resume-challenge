<div id="views" class="font-medium text-black dark:text-white">Views: N/A</div>
<script>
  const views = document.querySelector("#views") as HTMLElement | null;

  async function updateCounter() {
    if (!views) {
      console.error("Element not found");
      return;
    }
    try {
      const response = await fetch(
        "https://m2rremcwou4tyn4pw7g7vehr6i0ohkjj.lambda-url.eu-west-3.on.aws/"
      );
      let data = await response.json();
      views.innerHTML = `Views: ${data.view}`;
    } catch (error) {
      console.error("Error updating view counter", error);
    }
  }

  updateCounter();
</script>
